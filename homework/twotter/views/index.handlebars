<h1>Welcome to Twotter</h1>

<h2>Twotes</h2>

<form id="login-out-form" action="login" method="get">
	<input
		type="submit" 
		name="action"
		id="loginoutbutton"
		{{#if user}}
			value="Log Out"	
			class = "logout"
			onclick = "logOutUser()"
		{{else}}
			value="Log In"	
			class = "login"
			onclick = "getLoginForm()"
		{{/if}}
		>
</form>
<form id="new-twote-form" action="newTwote" method="POST">
	<div id="new-twote" class={{user._id}}>
		<p id="new-twote-header">
			{{#if user}}
				Post a new twote as {{user.username}}!
			{{else}}
				Log in to twote!
			{{/if}}
		</p> 
		<input
			id="twote-text"
			type="textarea" 
			class = "twotetext"
			{{#unless user}}
				disabled = 'disabled'
			{{/unless}}>
		<input
			id="post-twote"
			type="submit" 
			name = "action"
			class = "addbutton"
			value="Post Twote"
			{{#unless user}}
				disabled = 'disabled'
			{{/unless}}>
	</div>
			
</form>
<br>
<table border="1" id="twotes">
	{{#each twotes}}
	<tr class = "twote_{{this.user._id}}">
		<td>
			<p class= "twote-text">
				{{this.text}}
			</p>
			<p class="twote-author">
				{{this.user.username}}
			</p>
			<button 
				onclick="deleteTwote(this)"
				class="deleteTwote">
				Delete Twote
			</button>
			

			
		</td>
	</tr>
	{{/each}}
</table>
<br>
<table border="1" id="users">
	<tr>
		<td>
			Users
		</td>
	</tr>
	{{#each users}}
	<tr id = "user_{{this._id}}">
		<td>
			<button 
				onclick="highlightUserTwotes(this)"
				class="highlightTwotes">
				{{this.username}}
			</button>
		</td>
	</tr>
	{{/each}}
</table>








