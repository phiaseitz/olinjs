<h1>Ingredients</h1>

<h2>Ingredients in Stock</h2>

<form id="ingredients-form" action="updateIngredients" method="POST">
	<table border="1" id="current-ingredients">
		<tr>
			<td>
				Ingredient Name
			</td>
			<td>
				Price
			</td>
			<td>
				In Stock?
			</td>
			<td>
				Set Stock
			</td>
			<td>
				Edit
			</td>
		</tr>
		{{#each ingredients}}
		<tr id = "{{this._id}}">
			<td>
				<input
					id = "{{this._id}}_namebox"
					class = "namebox"
					type = "text"
					disabled = "disabled"
					value = {{this.name}}>
			</td>
			<td>
				<input
					id = "{{this._id}}_pricebox"
					class = "pricebox"
					type = "text"
					disabled = "disabled"
					value = {{this.price}}>
			</td>
			<td>
				{{#if this.inStock}}
					Yes
				{{else}}
					No
				{{/if}}
			</td>
			<td>
				<input 
					id = "{{this._id}}_stockbutton"
					type="submit" 
					name = "action"
					class = "outbutton"
					{{#if this.inStock}}
						value="Out of Stock"
					{{else}}
						value="Back in Stock"
					{{/if}}
					>
			</td>
			<td>
				<input
					id = "{{this._id}}_editbutton"
					type="button" 
					name = "action"
					class = "editbutton"
					value="Edit"
					onclick = "enableEditing(this)">
			</td>
		</tr>
		{{/each}}
	</table>
</form>

<h2>Add a New Ingredient</h2>

<form id="add-ingredients-form" action="updateIngredients" method="POST">
	<div id="add_ingredients">
		Name: <input type="text" name="name" id="addName"/>
		Price: <input type="text" name="price" id="addPrice"/>

		<input
			type="submit" 
			name = "action"
			class = "addbutton"
			value="Add a new ingredient">		
	</div>
</form>




