<h1>Ingredients</h1>

<h2>Ingredients in Stock</h2>

<form id="ingredients-form" action="updateIngredients" method="POST">
	<table border="1" id="current-ingredients">
		<tr>
			<td>
				Ingredient Name
			</td>
			<td>
				Price
			</td>
			<td>
				Set Stock
			</td>
			<td>
				Edit
			</td>
		</tr>
		{{#each ingredients}}
		<tr>
			<td>
				{{this.name}}
			</td>
			<td>
				{{this.price}}
			</td>
			<td>
				<input 
					type="submit" 
					name = "action"
					class = "outbutton"
					value="Out of Stock">
			</td>
			<td>
				<input
						type="submit" 
						name = "action"
						class = "editbutton"
						value="Edit">
			</td>
		</tr>
		{{/each}}
	</table>
</form>
<form id="add-ingredients-form" action="updateIngredients" method="POST">
	<div id="add_ingredients">
		Name: <input type="text" name="name" id="addName"/>
		Price: <input type="text" name="price" id="addPrice"/>

		<input
			type="submit" 
			name = "action"
			class = "addbutton"
			value="Add a new ingredient">		
	</div>
</form>




